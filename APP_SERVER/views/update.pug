doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title  Shopping Website 
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='/css/fontAwesome.css')
    link(rel='stylesheet', href='/css/hero-slider.css')
    link(rel='stylesheet', href='/css/owl-carousel.css')
    link(rel='stylesheet', href='/css/style.css')
    link(href='https://fonts.googleapis.com/css?family=Raleway:100,200,300,400,500,600,700,800,900', rel='stylesheet')
    script(src='/js/vendor/modernizr-2.8.3-respond-1.4.2.min.js')
  body
    script.
        if(window.localStorage.getItem('token'))
        {
          if(window.localStorage.getItem('token') == 0)
          {
            location.replace("/")
          }
        }
        else
        {
          window.localStorage.setItem('token', '0')
          location.replace("/")
        }
    .wrap
      header#header
        .container
          .row
            .col-md-12
              button#primary-nav-button(type='button') Menu
              a(href='/')
                .logo
                  img(src='/img/logo.png', alt='Venue Logo')
              nav#primary-nav.dropdown.cf
                ul.dropdown.menu
                  li.active
                     a(href='/dashboard/list/') Products
                  li
                    a(href='/new') Add Product
                  li
                    a(href='/' onClick="return validateToken()") Logout
                       script.
                          function validateToken() 
                          {
                          
                            window.localStorage.setItem('token', '0')

                          }
              // / #primary-nav
    section#top.banner.banner-secondary(style='background-image: url(/img/banner-image-3-1920x300.jpg);')
      .container
        .row
          .col-md-10.col-md-offset-1
            .banner-caption
              .line-dec
              h2 Update #{currentProduct.productName} details 
    main
      section.popular-places
        .container
          .contact-content
            .row
              .col-md-8
                .left-content
                  .row
                form(role='form' method='POST' action='')
                  div.form-group
                  label(for='productName') Product Name:
                  input#name.form-control(type='text' placeholder='Product Name' name='productName' value=`${currentProduct.productName}` required)

                  div.form-group
                  label(for='productBrand') Product Brand:
                  input#email.form-control(type='text' placeholder='Product Brand' name='productBrand' value=`${currentProduct.productBrand}` required)

                  div.form-group
                  label(for='rating') Product Rating:
                  input#email.form-control(type='number' placeholder='Product Rating' name='rating' value=`${currentProduct.rating}` required)
                  div.form-group
                  label(for='discount') Product Discount:
                  input#email.form-control(type='number' placeholder='Product Discount' name='discount' value=`${currentProduct.discount}` required)

                  div.form-group
                  label(for='discountEndDate') Discount End Date:
                  input#email.form-control(type='date' placeholder='Discount End Date' name='discountEndDate' value=`${currentProduct.discountEndDate}` required)

                  div.form-group
                  label(for='productImage') Product Image:
                  input#email.form-control(type='file' placeholder='Product Image' name='productImage' value=`${currentProduct.productImage}` required)

                  div.form-group
                  label(for='description') Description:
                  input#name.form-control(type='text', placeholder='Product Description' name='description' value=`${currentProduct.description}` required)
            
                  div.form-group
                  label(for='productDetails') Product Price:
                  input#email.form-control(type='number' placeholder='Product Price' name='price' value=`${currentProduct.price}`)

                  div.form-group
                  label(for='productQuantity') Product Quantity:
                  input#email.form-control(type='number' placeholder='Product Quantity' name='productQuantity' value=`${currentProduct.productQuantity}` required)

                
                  div.form-group
                  label(for='sizeAvailable') Available Size:
                  input#email.form-control(type='text' placeholder='Available Size' name='sizeAvailable'  value=`${currentProduct.productDetails.sizeAvailable}` required)
                
                  div.form-group
                  label(for='colorAvailable') Available Color:
                  input#email.form-control(type='text' placeholder='Available Color' name='colorAvailable' value=`${currentProduct.productDetails.colorAvailable}` required)


                  button.btn.btn-primary(type="submit" name="submit") Update
    footer
      .container
        .row
          .col-md-5
            .about-veno
              .logo
                img(src='/img/footer_logo.png', alt='Venue Logo')
              ul.social-icons
                li
                  a(href='#')
                    i.fa.fa-facebook
                  a(href='#')
                    i.fa.fa-twitter
                  a(href='#')
                    i.fa.fa-linkedin
          .col-md-4
            .useful-links
              .footer-heading
                h4 Useful Links
              .row
                .col-md-6
                  ul
                    li
                      a(href='/dashboard/list/')
                        i.fa.fa-stop
                        | Home
                    
                    li
                      a(href='#contact-info')
                        i.fa.fa-stop
                        | Contact Us
          .col-md-3
            #contact-info
              .footer-heading
                h4 Contact Information
              p
                i.fa.fa-map-marker
                |  Lester Street , Waterloo
              ul
                li
                  span Phone:
                  a(href='#') +1 2269392007
                li
                  span Email:
                  a(href='#') contact@company.com
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js', type='text/javascript')
    script.
      window.jQuery || document.write('<script src="js/vendor/jquery-1.11.2.min.js"><\\/script>')
    script(src='/js/vendor/bootstrap.min.js')
    script(src='/js/datepicker.js')
    script(src='/js/plugins.js')
    script(src='/js/main.js')