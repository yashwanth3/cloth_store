include _includes/sharedHTMLfunctions

doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Shopping Website 
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='/css/fontAwesome.css')
    link(rel='stylesheet', href='/css/hero-slider.css')
    link(rel='stylesheet', href='/css/owl-carousel.css')
    link(rel='stylesheet', href='/css/style.css')
    link(href='https://fonts.googleapis.com/css?family=Raleway:100,200,300,400,500,600,700,800,900', rel='stylesheet')
    script(src='/js/vendor/modernizr-2.8.3-respond-1.4.2.min.js')
  body
    .wrap
      header#header
        .container
          .row
            .col-md-12
              button#primary-nav-button(type='button') Menu
              a(href='index.html')
                .logo
                  img(src='/img/logo.png', alt='Venue Logo')
              nav#primary-nav.dropdown.cf
                ul.dropdown.menu
                  li
                    a(href='/') Home
                  li.active
                     a(href='/products/list/') Products
                  li
                    a(href='/about/') About
                  li
                    a(href='/login') Login
              // / #primary-nav
    section#top.banner.banner-secondary(style='background-image: url(/img/banner-image-1-1920x300.jpg);')
      .container
        .row
          .col-md-10.col-md-offset-1
            .banner-caption
              .line-dec
              h2 Everything you should have in your closet
    main
      section.featured-places
        .container
          .row
           each product in products
            .col-md-4.col-sm-6.col-xs-12
              .featured-item
                .thumb
                  img(src=product.productImage  height= "300px" width="200px")
                .down-content
                  h4 
                  a(href=`/products/${product._id}`) #{product.productName}
                  span
                    strong
                      sup $
                      | #{product.price}
                  p
                    | Discount: $ #{product.discount} %
                  p.rating
                    +outputRating(product.rating)
                
                  .text-button
                    a(href=`/products/${product._id}`) View More
    footer
      .container
        .row
          .col-md-5
            .about-veno
              .logo
                img(src='/img/footer_logo.png', alt='Venue Logo')
              ul.social-icons
                li
                  a(href='#')
                    i.fa.fa-facebook
                  a(href='#')
                    i.fa.fa-twitter
                  a(href='#')
                    i.fa.fa-linkedin
          .col-md-4
            .useful-links
              .footer-heading
                h4 Useful Links
              .row
                .col-md-6
                  ul
                    li
                      a(href='/')
                        i.fa.fa-stop
                        | Home
                    li
                      a(href='/about/')
                        i.fa.fa-stop
                        | About
                    li
                      a(href='#contact-info')
                        i.fa.fa-stop
                        | Contact Us
          .col-md-3
            #contact-info
              .footer-heading
                h4 Contact Information
              p
                i.fa.fa-map-marker
                |  Lester Street , Waterloo
              ul
                li
                  span Phone:
                  a(href='#') +1 2269392007
                li
                  span Email:
                  a(href='#') contact@company.com
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js', type='/text/javascript')
    script.
      window.jQuery || document.write('<script src="/js/vendor/jquery-1.11.2.min.js"><\\/script>')
    script(src='/js/vendor/bootstrap.min.js')
    script(src='/js/datepicker.js')
    script(src='/js/plugins.js')
    script(src='/js/main.js')