  body
    .wrap
      header#header
        .container
          .row
            .col-md-12
              button#primary-nav-button(type='button') Menu
              a(href='/')
                .logo
                  img(src='/img/logo.png', alt='Venue Logo')
              nav#primary-nav.dropdown.cf
                ul.dropdown.menu
                  li
                    a(href='/') Home
                  li
                    a(href='/products/list/') Products
                  li
                    a(href='/about/') About
                  li.active
                    a(href='/login') Login
              // / #primary-nav
    section#top.banner.banner-secondary(style='background-image: url(/img/banner-image-3-1920x300.jpg);')
      .container
        .row
          .col-md-10.col-md-offset-1
            .banner-caption
              .line-dec
              h2 Login
    main
      section.popular-places
        .container
          .contact-content
            .row
              .col-md-8
                .left-content
                  .row
                   form(role='form' name='loginform' onSubmit='return validateForm()' method='' action='http://localhost:3000/dashboard/list/' id="myForm")
                    label UserName
                    input.form-control(type='text' name='usr' placeholder='username')
                    label Password
                    input.form-control(type='password' name='pword' placeholder='password')
                    input.btn.btn-primary(type='submit' value='Login')
                  each users in userAdmin 
                      script.
                        function validateForm() { 
                        var un = document.loginform.usr.value;
                        var pw = document.loginform.pword.value;
                        var username = '#{users.userName}';
                        var password = '#{users.password}';
                        if ((un == username) && (pw == password)) {
                            window.localStorage.setItem('token', '1');
                            return true;
                        }
                        else {
                            alert ("Login was unsuccessful, please check your username and password");
                            return false;
                        }
                        }
