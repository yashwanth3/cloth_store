doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Shopping Website
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='/css/fontAwesome.css')
    link(rel='stylesheet', href='/css/hero-slider.css')
    link(rel='stylesheet', href='/css/owl-carousel.css')
    link(rel='stylesheet', href='/css/style.css')
    link(href='https://fonts.googleapis.com/css?family=Raleway:100,200,300,400,500,600,700,800,900', rel='stylesheet')
    script(src='/js/vendor/modernizr-2.8.3-respond-1.4.2.min.js')
  body
    .wrap
      header#header
        .container
          .row
            .col-md-12
              button#primary-nav-button(type='button') Menu
              a(href='/')
                .logo
                  img(src='/img/logo.png', alt='Venue Logo')
              nav#primary-nav.dropdown.cf
                ul.dropdown.menu
                  li
                   a(href='/') Home
                  li.active
                   a(href='/products/list/') Products
                  li
                   a(href='/about/') About
                  li
                   a(href='/login/') Login
              // / #primary-nav

    main
      section.featured-places
        .container
          .row
            .col-md-6.col-xs-12
              div
                img.img-responsive.wc-image(src=currentProduct.productImage, alt='')
              br
            .col-md-6.col-xs-12
              form.form(action='#', method='post')
                h2 #{currentProduct.productName}
                  br
                  br
                  strong.text-primary $#{currentProduct.price - (currentProduct.price * currentProduct.discount) / 100}          
                  small
                    del  $#{currentProduct.price}
                    p ( #{currentProduct.discount}% off )
                
                br
                
                p.lead
                  | #{currentProduct.description}
                br
                .row
                  .col-sm-4
                    label.control-label Available Size:
                    .form-group
                      ul
                       each size in currentProduct.productDetails.sizeAvailable
                        li.remove-bullets 
                        p.address= size
                    label.control-label Available Color:
                    .form-group
                      ul
                       each color in currentProduct.productDetails.colorAvailable
                        li.remove-bullets
                        p.address= color
                .blue-button
                  a(href='/payment') Buy Now
    footer
      .container
        .row
          .col-md-5
            .about-veno
              .logo
                img(src='/img/footer_logo.png', alt='Venue Logo')
              ul.social-icons
                li
                  a(href='#')
                    i.fa.fa-facebook
                  a(href='#')
                    i.fa.fa-twitter
                  a(href='#')
                    i.fa.fa-linkedin
          .col-md-4
            .useful-links
              .footer-heading
                h4 Useful Links
              .row
                .col-md-6
                  ul
                    li
                      a(href='/')
                        i.fa.fa-stop
                        | Home
                    li
                      a(href='/about/')
                        i.fa.fa-stop
                        | About
                    li
                      a(href=' #contact-info')
                        i.fa.fa-stop
                        | Contact Us
          .col-md-3
            #contact-info
              .footer-heading
                h4 Contact Information
              p
                i.fa.fa-map-marker
                |  Lester Street , Waterloo
              ul
                li
                  span Phone:
                  a(href='#') +1 2269392007
                li
                  span Email:
                  a(href='#') contact@company.com
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js', type='text/javascript')
    script.
      window.jQuery || document.write('<script src="js/vendor/jquery-1.11.2.min.js"><\\/script>')
    script(src='/js/vendor/bootstrap.min.js')
    script(src='/js/datepicker.js')
    script(src='/js/plugins.js')
    script(src='/js/main.js')